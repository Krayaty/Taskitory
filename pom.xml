<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.2</version>
    </parent>

    <groupId>de.krayadev</groupId>
    <artifactId>Taskitory</artifactId>
    <version>0.0.1</version>
    <name>Taskitory</name>
    <properties>
        <java.version>17</java.version>
        <target_dir>../target</target_dir>
        <starter_class>Plugins/src/main/java/Krayadev/TaskitoryApplication.java</starter_class>
        <domain-version>0.0.1</domain-version>
        <application-version>0.0.1</application-version>
        <adapter-version>0.0.1</adapter-version>
        <plugins-version>0.0.1</plugins-version>
    </properties>

    <modules>
        <module>Domain</module>
        <module>Application</module>
        <module>Plugins</module>
        <module>Adapter</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>5.3.14</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.22</version>
        </dependency>
    </dependencies>

    <build>
        <directory>${target_dir}</directory>
        <finalName>Taskitory.0.0.1</finalName>
    </build>

</project>
